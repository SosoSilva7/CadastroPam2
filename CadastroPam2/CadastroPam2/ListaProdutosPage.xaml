<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CadastroPam2"
             x:Class="CadastroPam2.ListaProdutosPage"
             Title="ListaProdutosPage">
    <VerticalStackLayout>
        <Label Text="Lista de Produtos" FontSize="24" HorizontalOptions="Center"/>


        <ListView x:Name="produtosListView">

            <ListView.ItemTemplate>

                <DataTemplate x:DataType="local:Produto">

                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Nome}" FontAttributes="Bold"/>
                            <Label Text="{Binding PrecoFormatado}" TextColor="Green"/>
                            <Label Text="Descrição" FontAttributes="Bold"/>
                            <Label Text="{Binding Descricao}"></Label>
                            <Label Text="{Binding Validade}"/>
                            <Label Text="Categoria" FontAttributes="Bold"/>
                            <Label Text="{Binding Categoria}"/>

                        </StackLayout>
                    </ViewCell>
                    <!--<TextCell Text="{Binding Nome}" Detail="{Binding PrecoFormatado}" />-->

                </DataTemplate>

            </ListView.ItemTemplate>

        </ListView>
    </VerticalStackLayout>
</ContentPage>