<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CadastroPam2"
             x:Class="CadastroPam2.ListaProdutosPage"
             BackgroundColor="#f9f9f9"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Spacing="15"
                             VerticalOptions="CenterAndExpand"
                             HorizontalOptions="Center">

            <!-- TÃ­tulo -->
            <Label Text="ðŸ“‹ Lista de Produtos"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#c9345c"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <!-- Lista -->
            <ListView x:Name="produtosListView"
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      WidthRequest="340"
                      BackgroundColor="Transparent">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Produto">
                        <ViewCell>
                            <Frame BackgroundColor="White"
                                   CornerRadius="15"
                                   Padding="15"
                                   Margin="0,5"
                                   HasShadow="True"
                                   BorderColor="#c9345c">
                                <VerticalStackLayout Spacing="5">
                                    <Label Text="{Binding Nome}"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           TextColor="#333"/>

                                    <Label Text="{Binding PrecoFormatado}"
                                           TextColor="Green"
                                           FontSize="14"/>

                                    <Label Text="DescriÃ§Ã£o:"
                                           FontAttributes="Bold"
                                           FontSize="13"
                                           TextColor="#666"/>
                                    <Label Text="{Binding Descricao}"
                                           FontSize="13"
                                           TextColor="#444"/>

                                    <Label Text="Validade:"
                                           FontAttributes="Bold"
                                           FontSize="13"
                                           TextColor="#666"/>
                                    <Label Text="{Binding Validade}"
                                           FontSize="13"
                                           TextColor="#444"/>

                                    <Label Text="Categoria:"
                                           FontAttributes="Bold"
                                           FontSize="13"
                                           TextColor="#666"/>
                                    <Label Text="{Binding Categoria}"
                                           FontSize="13"
                                           TextColor="#444"/>
                                </VerticalStackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--botÃ£o de voltat-->
            <Button Text="â¬… Voltar ao InÃ­cio"
        BackgroundColor="#c9345c"
        TextColor="White"
        FontAttributes="Bold"
        CornerRadius="10"
        WidthRequest="250"
        HeightRequest="45"
        Clicked="Voltar_Clicked"
        Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
